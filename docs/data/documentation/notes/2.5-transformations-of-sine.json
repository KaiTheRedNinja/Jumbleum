  "primaryContentSections" : [
    {
      "content" : [
        {
          "anchor" : "Overview",
          "level" : 2,
          "text" : "Overview",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "A sine function can be transformed in four ways:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Vertical translation",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : ": moving the graph up or down",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Horizontal translation",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : ": moving the graph left or right",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Amplitude stretch",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : ": stretching or compressing the graph vertically",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Period stretch",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : ": stretching or compressing the graph horizontally",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        },
        {
          "inlineContent" : [
            {
              "text" : "Reflections can be accomplished by using negative values for the amplitude or period.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "anchor" : "Generic-Transformation",
          "level" : 2,
          "text" : "Generic Transformation",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "The generic transformation of a sine function is given by the formula:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "y = \\textrm{amplitude} \\sin(\\textrm{frequency}(x - \\textrm{xoffset})) + \\textrm{yoffset}",
            "",
            "\\textrm{or}",
            "",
            "y = a \\sin(b(x - c)) + d"
          ],
          "syntax" : "math",
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "where:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "$amplitude$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " or ",
                      "type" : "text"
                    },
                    {
                      "code" : "$a$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " is the vertical stretch, where the resultant graph has an amplitude of ",
                      "type" : "text"
                    },
                    {
                      "code" : "$|a|$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : "",
                      "type" : "text"
                    },
                    {
                      "text" : " ",
                      "type" : "text"
                    },
                    {
                      "text" : "and vertical range of ",
                      "type" : "text"
                    },
                    {
                      "code" : "$2|a|$",
                      "type" : "codeVoice"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "$frequency$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " or ",
                      "type" : "text"
                    },
                    {
                      "code" : "$b$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " is the horizontal stretch, where the period of the graph is given by",
                      "type" : "text"
                    },
                    {
                      "text" : " ",
                      "type" : "text"
                    },
                    {
                      "code" : "$\\frac{2\\pi}{|b|}$",
                      "type" : "codeVoice"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "$xoffset$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " or ",
                      "type" : "text"
                    },
                    {
                      "code" : "$c$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " is the horizontal translation, where the graph is moved to the right by ",
                      "type" : "text"
                    },
                    {
                      "code" : "$c$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " units",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "$yoffset$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " or ",
                      "type" : "text"
                    },
                    {
                      "code" : "$d$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " is the vertical translation, where the graph is moved up by ",
                      "type" : "text"
                    },
                    {
                      "code" : "$d$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " units",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        },
        {
          "anchor" : "Drawing-Transformed-Sine-Graphs",
          "level" : 2,
          "text" : "Drawing Transformed Sine Graphs",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "My procedure is:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Determine the y-offset of the graph",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Draw a dotted line at the y-offset",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Determine the amplitude of the graph, and therefore the maximum and minimum y values",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Draw two dotted lines at the maximum and minimum y values",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Determine the x-offset of the graph, and therefore where the graph starts",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Draw the first point at ",
                      "type" : "text"
                    },
                    {
                      "code" : "$(xoffset, 0)$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " (for a sine graph. For cosine, draw it at ",
                      "type" : "text"
                    },
                    {
                      "code" : "$(xoffset, amplitude)$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ")",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Determine the period of the graph",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Draw points every ",
                      "type" : "text"
                    },
                    {
                      "code" : "$period\/4$",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " units along the x-axis.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                },
                {
                  "items" : [
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "The first point is at ",
                              "type" : "text"
                            },
                            {
                              "code" : "$(xoffset, 0)$",
                              "type" : "codeVoice"
                            }
                          ],
                          "type" : "paragraph"
                        }
                      ]
                    },
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "The second point is at ",
                              "type" : "text"
                            },
                            {
                              "code" : "$(xoffset + period\/4, amplitude)$",
                              "type" : "codeVoice"
                            }
                          ],
                          "type" : "paragraph"
                        }
                      ]
                    },
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "The third point is at ",
                              "type" : "text"
                            },
                            {
                              "code" : "$(xoffset + period\/2, 0)$",
                              "type" : "codeVoice"
                            }
                          ],
                          "type" : "paragraph"
                        }
                      ]
                    },
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "The fourth point is at ",
                              "type" : "text"
                            },
                            {
                              "code" : "$(xoffset + 3*period\/4, -amplitude)$",
                              "type" : "codeVoice"
                            }
                          ],
                          "type" : "paragraph"
                        }
                      ]
                    },
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "The fifth point is at ",
                              "type" : "text"
                            },
                            {
                              "code" : "$(xoffset + period, 0)$",
                              "type" : "codeVoice"
                            }
                          ],
                          "type" : "paragraph"
                        }
                      ]
                    }
                  ],
                  "type" : "unorderedList"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Draw through the points",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "orderedList"
        }
      ],
      "kind" : "content"
    }
