  "primaryContentSections" : [
    {
      "content" : [
        {
          "anchor" : "Overview",
          "level" : 2,
          "text" : "Overview",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Bipolar Junction Transistors are basically an electronically controlled switch. It generally has three pins:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Base",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Collector",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Emitter",
                      "type" : "text"
                    },
                    {
                      "text" : " ",
                      "type" : "text"
                    },
                    {
                      "text" : "Where ",
                      "type" : "text"
                    },
                    {
                      "inlineContent" : [
                        {
                          "text" : "current",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : " at the base will control the current flow between the collector and emitter.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        },
        {
          "inlineContent" : [
            {
              "text" : "For a transistor to activate, two conditions must be met:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "There must be at least 0.7V of potential difference between Base and Emitter (ie, V_BE > 0.7V)",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "There must be current at the base",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "orderedList"
        },
        {
          "anchor" : "Current-and-Voltage-across-a-BJT",
          "level" : 2,
          "text" : "Current and Voltage across a BJT",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Terminology:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Base-Emitter Voltage",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : " (V_BE) is the voltage between the base and emitter",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Collector-Emitter Voltage",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : " (V_CE) is the voltage between the collector and emitter",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Base Current",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : " (I_B) is the current at the base",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Collector Current",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : " (I_C) is the current at the collector",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Emitter Current",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : " (I_E) is the current at the emitter",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Beta",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : " (Î²) is the current gain of the transistor, which is the ratio of I_C to I_B",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        },
        {
          "inlineContent" : [
            {
              "text" : "They are connected by these equations. You can always use KVL and KCL (see ",
              "type" : "text"
            },
            {
              "identifier" : "doc:\/\/Notes\/documentation\/Notes\/Circuit-Theories",
              "isActive" : true,
              "type" : "reference"
            },
            {
              "text" : ") to calculate",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "them given other values.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "I_E = I_B + I_C",
            "",
            "V_{CE} = V_{BE} + V_{BC}",
            "",
            "I_C = \\beta I_B"
          ],
          "syntax" : "math",
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "The resistance of a model transistor is generally given by:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "R = \\begin{cases} \\infty & V_{BE} < 0.7V \\\\ 0 & V_{BE} \\geq 0.7V \\end{cases}"
          ],
          "syntax" : "math",
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "Following a reverse L shaped graph.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "anchor" : "Operation-Regions",
          "level" : 2,
          "text" : "Operation Regions",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "identifier" : "Graph_BJT_VCE_IC",
              "type" : "image"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Cut-off Region",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : ": No current flows between the collector and emitter",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Saturation Region",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : ": Some current flows between the collector and emitter",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "inlineContent" : [
                        {
                          "text" : "Active Region",
                          "type" : "text"
                        }
                      ],
                      "type" : "strong"
                    },
                    {
                      "text" : ": A lot of current flows between the collector and emitter",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        },
        {
          "anchor" : "Solving",
          "level" : 2,
          "text" : "Solving",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "identifier" : "Example_BJT",
              "type" : "image"
            }
          ],
          "type" : "paragraph"
        },
        {
          "inlineContent" : [
            {
              "text" : "Note: I think the transistor might be the wrong type. Iâm not bothered to find the right one rn.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "inlineContent" : [
            {
              "text" : "In this example, given that you have ",
              "type" : "text"
            },
            {
              "code" : "V_BE",
              "type" : "codeVoice"
            },
            {
              "text" : ", you can determine the following:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "V_B",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ", as a voltage divider between R2 and R1",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "V_RC",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ", as a voltage divider between RC and R2, where ",
                      "type" : "text"
                    },
                    {
                      "code" : "V_net = Vcc - V_BE",
                      "type" : "codeVoice"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "I_E",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ", using V=IR with ",
                      "type" : "text"
                    },
                    {
                      "code" : "V_RC",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " and ",
                      "type" : "text"
                    },
                    {
                      "code" : "RC",
                      "type" : "codeVoice"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "I_C",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ", which is equal to ",
                      "type" : "text"
                    },
                    {
                      "code" : "I_E",
                      "type" : "codeVoice"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "V_C",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ", using V=IR with ",
                      "type" : "text"
                    },
                    {
                      "code" : "I_C",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " and ",
                      "type" : "text"
                    },
                    {
                      "code" : "R_E",
                      "type" : "codeVoice"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "V_E",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ", using V=IR with ",
                      "type" : "text"
                    },
                    {
                      "code" : "I_E",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " and ",
                      "type" : "text"
                    },
                    {
                      "code" : "R_C",
                      "type" : "codeVoice"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "V_CE",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ", as ",
                      "type" : "text"
                    },
                    {
                      "code" : "V_C - V_E",
                      "type" : "codeVoice"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        },
        {
          "inlineContent" : [
            {
              "text" : "Remember that in this case, assume that there is ",
              "type" : "text"
            },
            {
              "inlineContent" : [
                {
                  "text" : "no current",
                  "type" : "text"
                }
              ],
              "type" : "strong"
            },
            {
              "text" : " flowing into base. Ie, ",
              "type" : "text"
            },
            {
              "code" : "I_E = 0",
              "type" : "codeVoice"
            },
            {
              "text" : ".",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "Ignore the beta value, its not useful here.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        }
      ],
