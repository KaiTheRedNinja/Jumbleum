                      "type" : "codeVoice"
                    },
                    {
                      "text" : " or ",
                      "type" : "text"
                    },
                    {
                      "code" : "-2",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ".",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ],
              "size" : 1
            },
            {
              "content" : [
                {
                  "code" : [
                    "x = \\sqrt{4}",
                    "x = 2"
                  ],
                  "syntax" : "math",
                  "type" : "codeListing"
                },
                {
                  "inlineContent" : [
                    {
                      "text" : "In this case, ",
                      "type" : "text"
