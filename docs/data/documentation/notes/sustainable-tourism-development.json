  "primaryContentSections" : [
    {
      "content" : [
        {
          "anchor" : "Overview",
          "level" : 2,
          "text" : "Overview",
          "type" : "heading"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "How does tourism development help achieve sustainable development?",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                },
                {
                  "items" : [
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "Economic sustainability",
                              "type" : "text"
                            }
                          ],
                          "type" : "paragraph"
                        },
                        {
                          "items" : [
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "tourism development should continually provide employment opportunities and income growth",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            },
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "tourism development should result in more social services that raise local standards of living",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            }
                          ],
                          "type" : "unorderedList"
                        }
                      ]
                    },
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "Social and environmental sustainability",
                              "type" : "text"
                            }
                          ],
                          "type" : "paragraph"
                        },
                        {
                          "items" : [
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "tourism development should respect authenticity of local communities, practices and art forms; and contribute to intercultural understanding and tolerance",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            },
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "tourism development should maintain essential ecological processes and conserve natural heritage and protect biodiversity",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            }
                          ],
                          "type" : "unorderedList"
                        }
                      ]
                    },
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "Sustainable tourism development",
                              "type" : "text"
                            }
                          ],
                          "type" : "paragraph"
                        },
                        {
                          "items" : [
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "achieved when sustainability principles are applied to the economic, social and environmental aspects of tourism development",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            },
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "all three dimensions are balanced to guarantee tourismâ€™s long-term sustainability",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            }
                          ],
                          "type" : "unorderedList"
                        }
                      ]
                    }
                  ],
                  "type" : "unorderedList"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "How effective are stakeholders in influencing sustainable tourism development?",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                },
                {
                  "items" : [
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "Governments and international organisations",
                              "type" : "text"
                            }
                          ],
                          "type" : "paragraph"
                        },
                        {
                          "items" : [
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "governments establish policies, create plans and enforce regulations to manage tourism development",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            },
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "international organisations offer consultancy, financial assistance and raise public awareness",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            }
                          ],
                          "type" : "unorderedList"
                        }
                      ]
                    },
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "Businesses, local communities and tourists",
                              "type" : "text"
                            }
                          ],
                          "type" : "paragraph"
                        },
                        {
                          "items" : [
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "businesses and local communities could seek advice from others and participate in decision-making",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            },
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "tourists could develop genuine interest in tourist destination regions and interact responsibly",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            }
                          ],
                          "type" : "unorderedList"
                        }
                      ]
                    },
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "Challenges faced by stakeholders",
                              "type" : "text"
                            }
                          ],
                          "type" : "paragraph"
                        },
                        {
                          "items" : [
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "stakeholders may have conflicting priorities and needs",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            },
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "stakeholders have differing amounts of control over resources and may view how sustainability is measured differently from other stakeholders",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            }
                          ],
                          "type" : "unorderedList"
                        }
                      ]
                    }
                  ],
                  "type" : "unorderedList"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "How effective are the different approaches in achieving sustainable tourism development?",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                },
                {
                  "items" : [
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "Ecotourism",
                              "type" : "text"
                            }
                          ],
                          "type" : "paragraph"
                        },
                        {
                          "items" : [
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "comprises diverse approaches that lie on a spectrum from hard to soft ecotourism",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            },
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "limitations include uncertainty over continuity of efforts in conserving nature and involving local communities",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            }
                          ],
                          "type" : "unorderedList"
                        }
                      ]
                    },
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "Community-based tourism",
                              "type" : "text"
                            }
                          ],
                          "type" : "paragraph"
                        },
                        {
                          "items" : [
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "innovative small-scale tourism managed by local communities including homestays and agricultural tourism",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            },
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "limitations include the potential loss of local culture and competition from larger-scale tourism operators",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            }
                          ],
                          "type" : "unorderedList"
                        }
                      ]
                    },
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "Pro-poor tourism",
                              "type" : "text"
                            }
                          ],
                          "type" : "paragraph"
                        },
                        {
                          "items" : [
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "focused on improving livelihoods of the poor through training and access to micro-finance",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            },
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "limitations include the inability to significantly reduce poverty as compared to direct investment in social services",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            }
                          ],
                          "type" : "unorderedList"
                        }
                      ]
                    }
                  ],
                  "type" : "unorderedList"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "How might tourism continue to develop sustainably?",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                },
                {
                  "items" : [
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "Sustainable tourism production",
                              "type" : "text"
                            }
                          ],
                          "type" : "paragraph"
                        },
                        {
                          "items" : [
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "when demands on ecosystem services do not exceed the supply of resources",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            },
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "when different stakeholders adopt a long-term, responsible and coordinated approach instead of short-term profit",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            }
                          ],
                          "type" : "unorderedList"
                        }
                      ]
                    },
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "Sustainable tourism consumption",
                              "type" : "text"
                            }
                          ],
                          "type" : "paragraph"
                        },
                        {
                          "items" : [
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "when destination regions manage demand and tourism is consumed responsibly by tourists",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            },
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "when policies give local communities primary attention while considering needs of tourists",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            }
                          ],
                          "type" : "unorderedList"
                        }
                      ]
                    },
                    {
                      "content" : [
                        {
                          "inlineContent" : [
                            {
                              "text" : "Equitable distribution of tourism benefits",
                              "type" : "text"
                            }
                          ],
                          "type" : "paragraph"
                        },
                        {
                          "items" : [
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "effective tourism management to ensure benefits are enjoyed by all",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            },
                            {
                              "content" : [
                                {
                                  "inlineContent" : [
                                    {
                                      "text" : "minimising negative trade-offs within or between economic, social and environmental dimensions",
                                      "type" : "text"
                                    }
                                  ],
                                  "type" : "paragraph"
                                }
                              ]
                            }
                          ],
                          "type" : "unorderedList"
                        }
                      ]
                    }
                  ],
                  "type" : "unorderedList"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        }
      ],
